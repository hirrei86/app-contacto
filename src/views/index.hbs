<div class="col-md-6 offset-md-3">
  <div class="card bg-dark text-light">
    <div class="card-header">
      <h1 class="h4 text-white">Lista de contactos</h1>
    </div>
    <div class="card-body">
      {{#if contacts}}
        <ul class="list-group">
          {{#each contacts}}
            <li
              class="list-group-item d-flex justify-content-between align-items-center"
            >
              <div class="my-auto">
                <h3 class="h6">{{firstname}} {{lastname}}</h3>
                <p>{{email}}</p>
                <p>{{phone}}</p>
              </div>
              <div>
                <a
                  href="/delete-contact/{{id}}"
                  class="btn btn-danger"
                >Delete</a>
                <a
                  href="/edit-contact/{{id}}"
                  class="btn btn-secondary"
                >Edit</a>
              </div>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p class="fs-4 text-center">No posee contactos.</p>
      {{/if}}
    </div>
    <div class="card-footer">
      <form action="{{#unless contact.id}}/new-contact{{else}}/update-contact/{{contact.id}}{{/unless}}" method="POST">
        <div class="row">
          <div class="col">
            <label for="firstname">Nombre/s:</label>
            <input
              type="text"
              name="firstname"
              class="form-control mb-3"
              value="{{contact.firstname}}"
              autofocus
            />
          </div>
          <div class="col">
            <label for="lastname">Apellido:</label>
            <input
              type="text"
              name="lastname"
              class="form-control mb-3"
              value="{{contact.lastname}}"
            />
          </div>
        </div>
        <div class="row">
          <div class="col">
            <label for="email">Email:</label>
            <input
              type="email"
              name="email"
              class="form-control mb-3"
              value="{{contact.email}}"
            />
          </div>
          <div class="col">
            <label for="phone">Telefono:</label>
            <input
              type="tel"
              name="phone"
              class="form-control mb-3"
              value="{{contact.phone}}"
            />
          </div>
        </div>
        {{#if contact.id}}
          <button class="btn btn-primary btn-block">
            Update
          </button>
          <a href="/" class="btn btn-secondary">
            Cancel
          </a>
        {{else}}
          <button class="btn btn-primary btn-block">
            Guardar
          </button>
        {{/if}}
      </form>
    </div>
  </div>
</div>